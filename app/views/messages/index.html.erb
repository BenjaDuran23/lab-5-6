<h1>Messages</h1>

<%= link_to 'Add New Message', new_message_path, class: 'button' %>

<table>
  <thead>
    <tr>
      <% Message.attribute_names.each do |attr| %>
        <th><%= attr.titleize %></th>
      <% end %>
      <th>Show Button</th>
      <th>Edit Button</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <% Message.attribute_names.each do |attr| %>
          <td><%= message.send(attr) %></td>
        <% end %>
        <td><%= link_to 'Show', message_path(message) %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
