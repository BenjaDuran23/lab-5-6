<h1>Edit Chat</h1>

    <% if @chat.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@chat.errors.count, "error") %> prohibited this chat from being saved:</h2>
        <ul>
          <% @chat.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<%= form_with model: @chat do |form| %>
  <div>
    <%= form.label :sender_id, "Sender" %>
    <%= form.collection_select :sender_id, User.all, :id, :to_s, prompt: "Select a sender" %>
  </div>

  <div>
    <%= form.label :receiver_id, "Receiver" %>
    <%= form.collection_select :receiver_id, User.all, :id, :to_s, prompt: "Select a receiver" %>
  </div>

  <div>
    <%= form.submit "Update Chat" %>
  </div>
<% end %>
