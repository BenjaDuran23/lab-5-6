<%= form_with(model: @chat) do |f| %>
    <% if @chat.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@chat.errors.count, "error") %> prohibited this chat from being saved:</h2>
        <ul>
          <% @chat.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :sender_id %>
      <%= f.collection_select :sender_id, User.all, :id, :to_s, prompt: "Select Sender" %>
    </div>
  
    <div class="field">
      <%= f.label :receiver_id %>
      <%= f.collection_select :receiver_id, User.all, :id, :to_s, prompt: "Select Receiver" %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  